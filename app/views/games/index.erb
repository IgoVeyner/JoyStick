<h1 class="main-header-large">All Games</h1>

<form action="/games/new" method="get">
  <input id="new-button" class="button button-new" type="submit" value="+">
</form>

<section class="index-container">
  <% @games.each do |game| %>

    <section class="index-sub-container">

      <h3 class="index-sub-game-header"><a href="/games/<%= game.slug %>"><%= game.name %></a></h3>
      <h3 class="index-sub-game-header">Publisher: <span class="text-stat">
        <% if game.publisher == "" or game.publisher == nil %>
          "Unknown"
        <% else %>
          <%= game.publisher %>
        <% end %>
      </span></h3>

      <h3 class="index-sub-game-header">Developer: <span class="text-stat">
        <% if game.developer == "" or game.developer == nil %>
          "Unknown"
        <% else %>
          <%= game.developer %>
        <% end %>
      </span></h3>

      <h3 class="index-sub-game-header">Release Date: <span class="text-stat">
        <% if game.release_date == "" or game.release_date == nil %>
          "Unknown"
        <% else %>
          <%= game.release_date %>
        <% end %>
      </span></h3>

      <p class="missing-info">Missing or incorrect information? </p>

      <form class="button-edit-container" action="/games/<%= game.slug %>/edit" method="get">
        <input class="button button-edit" type="submit" value="Edit">
      </form>
      
    </section>
  <% end %>
</section>
