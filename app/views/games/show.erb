<section class="center-text">

  <h1 class="main-header-large"><%= @game.name %></h1>

  <section class="show-container">

    <section class="show-sub-container">
      <h3>Publisher: <span class="text-stat"><%= @game.publisher ||= 'Unknown' %></span></h3>
      <h3>Developer: <span class="text-stat"><%= @game.developer ||= 'Unknown' %></span></h3>
      <h3>Release Date: <span class="text-stat"><%= @game.release_date ||= 'Unknown' %></span></h3>
      <h3>Owners: <span class="text-stat"><%= @game.users.uniq.length %></span></h3>
      <h3>Collections: <span class="text-stat"><%= @game.collections.length %></span></h3>
      <h3>Consoles: <span class="text-stat"><%= @game.consoles.uniq.length %></span></h3>
    </section>
  </section>

  <form action="/games/<%= @game.slug %>/edit" method="get">
    <input class="button button-edit show-edit-button" type="submit" value="Edit Game">
  </form>

</section>