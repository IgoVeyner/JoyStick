<section class="center-text">

  <h1 class="index-header"><%= @user.username %></h1>

  <section class="user-container">

    <section class="user-sub-container">
      <h3>Member Since: </h3>
      <h3><%= @user.created_at.month %> / <%= @user.created_at.day %> / <%= @user.created_at.year %></h3>
      <h3>Collections: <%= @user.collections.size %></h3>
      <h3>Consoles: <%= @user.consoles.size %></h3>
      <h3>Games: <%= @user.games.size %></h3>
      <h3>Favorite Console: STUB<%=  %></h3>
      <p>*by number of games</p>
    </section>

  </section>

  <br>
  <% if @user == current_user %>
    <form action="/collections/new" method="get">
      <input type="submit" value="New Collection">
    </form>
  <% end %>

  <h1 class="index-header">All Collections: </h1>

  <section class="index-container">
  
    <% @user.collections.each do |col| %>
      <section class="index-sub-container">

        
        <h2>Name: <a href="/collections/<%= col.id %>"><%= col.name %></h2></a>
        <h3>Console: <a href="/consoles/<%= col.console.slug %>"><%= col.console.name %> </h3></a>
        <h3>Games: <%= col.games.size %></h3>

        <% if @user == current_user %>
          <form action="/collections/<%= col.id %>/edit" method="get">
            <input type="submit" value="Edit Collection">
          </form>
        <% end %>

      </section>
    <% end %>

  </section>
</section>
