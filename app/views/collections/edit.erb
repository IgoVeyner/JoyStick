<form action="/collections" method="post">
  <input type="hidden" name="_method" value="patch">

  <h1>Edit a Collection</h1>

  <% if @errors %>
    <% @errors.each do |error| %>
      <p style="color: red;"><%= error %></p>
    <% end %>
  <% end %>
  
  <label for="">Collection Name: </label>
  <br>
  <input type="text" name="collection[name]" value="<%= @collection.name %>" required>
  <br><br>

  <h3>Edit Console is currently disabled</h3>
  <% @consoles.each do |console| %>
    <input type="radio" name="collection[console_id]" id="<%= console.id %>" value="<%= console.id %>" <%= 'checked' if @collection.console == console %> disabled><span><%= console.name %></span>
    <br>
  <% end %>

  <br>
  <p>or</p>
  <label for="">Console Name:</label>
  <br>
  <input type="text" name="console[name]" disabled>
  <br><br>

  <h3>Select existing Games or create a new one:</h3>
  <% @games.each do |game| %>
    <input type="checkbox" name="collection[game_ids][]" id="<%= game.id %>" value="<%= game.id %>" <%= 'checked' if @collection.games.include?(game) %>><span><%= game.name %></span>
    <br>
  <% end %>

  <br>
  <p>or</p>
  <label for="">Game Name:</label>
  <br>
  <input type="text" name="game[name]">
  <br><br>

  <br>

  <input type="hidden" name="collection[user_id]" value="<%= current_user.id %>">
  <input type="submit" value="Edit Collection">
</form>