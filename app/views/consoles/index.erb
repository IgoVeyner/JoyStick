<h1 class="main-header-large">All Consoles</h1>

<form action="/consoles/new" method="get">
  <input id="new-button" class="button button-new" type="submit" value="+">
</form>

<section class="index-container">
  <% @consoles.each do |console| %>

  <section class="index-sub-container">

    <h3 class="index-sub-console-header"><a href="/consoles/<%= console.slug %>"><%= console.name %></a></h3>
    <h3 class="index-sub-console-header">Manufacturer: <span class="text-stat">
        <% if console.manufacturer == "" %>
          <%= 'Unknown' %>
        <% else %>
          <%= console.manufacturer %>
        <% end %>
    </span></h3>
    <h3 class="index-sub-console-header">Release Date: <span class="text-stat">
      <% if console.release_date == "" %>
          <%= 'Unknown' %>
        <% else %>
          <%= console.release_date %>
        <% end %>
    </span></h3>
    <p class="missing-info">Missing or incorrect information? </p>

    <form class="button-edit-container" action="/consoles/<%= console.slug %>/edit" method="get">
      <input class="button button-edit" type="submit" value="Edit">
    </form>
  </section>
  <% end %>
</section>
